{
  "version": 2,
  "builds": [
    {
      "src": "api/src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/user/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "frontend/admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/server.js"
    },
    {
      "src": "/admin/static/(.*)",
      "dest": "/frontend/admin/build/static/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/frontend/admin/build/index.html"
    },
    {
      "src": "/admin",
      "dest": "/frontend/admin/build/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/user/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/user/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
