{
  "version": 2,
  "builds": [
    {
      "src": "api/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/user/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "frontend/admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/server.js"
    },
    {
      "src": "/admin/static/(.*)",
      "dest": "/frontend/admin/build/static/$1"
    },
    {
      "src": "/admin/manifest.json",
      "dest": "/frontend/admin/build/manifest.json"
    },
    {
      "src": "/admin/favicon.ico",
      "dest": "/frontend/admin/build/favicon.ico"
    },
    {
      "src": "/admin/asset-manifest.json",
      "dest": "/frontend/admin/build/asset-manifest.json"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/frontend/admin/build/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/user/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/frontend/user/build/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/user/build/favicon.ico"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/frontend/user/build/asset-manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/user/build/index.html"
    }
  ]
}
