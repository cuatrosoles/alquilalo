{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm install --prefix backend"
      }
    },
    {
      "src": "frontend/user/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend/user && npm install && npm run build"
      }
    },
    {
      "src": "frontend/admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend/admin && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "frontend/admin/build/$1"
    },
    {
      "src": "/admin",
      "dest": "frontend/admin/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/user/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
